@model Domain.ViewModel.ProductDetailsViewModel
@{
    ViewData["Title"] = "Create";
}
<p>Create a Product</p>
<form method="post">
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" asp-for="Name" /> </td>
        </tr>
        <tr>
            <td>Desciption</td>
            <td><textarea asp-for="Description"></textarea></td>
        </tr>
        <tr>
            <td>Price</td>
            <td><input type="text" asp-for="ProductPrice" /> </td>
        </tr>
        <tr>
            <td>Stock</td>
            <td><input type="text" asp-for="ProductStock" /> </td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit" >Create</button>
            </td>
        </tr>
    </table>
</form>

